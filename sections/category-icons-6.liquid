<script>
// Mobile carousel for 480px and below

document.addEventListener('DOMContentLoaded', function() {
  const items = document.querySelectorAll('.category-icons-6__item');
  let currentStartIndex = 0;
  
  console.log('Carousel script loaded. Found items:', items.length);
  console.log('Current window width:', window.innerWidth);
  
  function updateIconPositions() {
    const width = window.innerWidth;
    
    if (width <= 480 && items.length > 0) {
      items.forEach(icon => {
        icon.classList.remove('slot-0', 'slot-1', 'slot-2', 'slot-hidden');
      });
      
      for (let slot = 0; slot < 3; slot++) {
        const iconIndex = (currentStartIndex + slot) % items.length;
        items[iconIndex].classList.add(`slot-${slot}`);
      }
      
      for (let i = 0; i < items.length; i++) {
        if (i !== (currentStartIndex % items.length) && 
            i !== ((currentStartIndex + 1) % items.length) && 
            i !== ((currentStartIndex + 2) % items.length)) {
          items[i].classList.add('slot-hidden');
        }
      }
    }
  }
  
  function slideCarousel() {
    const width = window.innerWidth;
    
    if (width <= 480 && items.length > 0) {
      currentStartIndex = (currentStartIndex + 1) % items.length;
      console.log('Sliding carousel to position:', currentStartIndex);
      updateIconPositions();
    }
  }
  
  function initCarousel() {
    const width = window.innerWidth;
    
    if (width <= 480 && items.length > 0) {
      currentStartIndex = 0;
      updateIconPositions();
    } else {
      items.forEach(icon => {
        icon.classList.remove('slot-0', 'slot-1', 'slot-2', 'slot-hidden');
      });
      currentStartIndex = 0;
    }
  }
  
  initCarousel();
  setInterval(slideCarousel, 5000);
  window.addEventListener('resize', initCarousel);
});
</script>

