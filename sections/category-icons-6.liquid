/* === Base wrapper (applies to ALL icons) === */
.category-icons-6__image-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background: #ECDFD0;
  width: 80px;
  height: 80px;
  margin-bottom: 12px;
  border: 0px solid #000000;
  overflow: hidden;
  transition: all 0.3s ease;
}

/* === Multi-image wrapper (larger for first circle) === */
.category-icons-6__image-wrapper--multi {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background: #ECDFD0;
  width: {{ section.settings.multi_circle_size }}px;
  height: {{ section.settings.multi_circle_size }}px;
  margin-bottom: 12px;
  border: 0px solid #000000;
  overflow: hidden;
  transition: all 0.3s ease;
}

/* === Per-circle individual paddings === */
.category-icons-6__item:nth-child(1) .category-icons-6__image-wrapper { padding: {{ section.settings.circle1_padding }}; }
.category-icons-6__item:nth-child(2) .category-icons-6__image-wrapper { padding: {{ section.settings.circle2_padding }}; }
.category-icons-6__item:nth-child(3) .category-icons-6__image-wrapper { padding: {{ section.settings.circle3_padding }}; }
.category-icons-6__item:nth-child(4) .category-icons-6__image-wrapper { padding: {{ section.settings.circle4_padding }}; }
