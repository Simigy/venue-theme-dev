{% comment %}
  Category Icons Section
  Displays category icons with links under the navbar
{% endcomment %}

{%- style -%}
/* === FORCE OVERRIDE ALL STYLES === */
.category-icons,
section.category-icons,
.shopify-section .category-icons {
  background-color: {{ section.settings.background_color }} !important;
  padding: 30px 0 0 0 !important;
  margin: 0 !important;
  position: relative !important;
  z-index: 1 !important;
}

/* Override any theme or section settings */
.category-icons {
  padding-top: 30px !important;
  padding-bottom: 0px !important;
  padding-left: 0px !important;
  padding-right: 0px !important;
}

/* Force 30px padding on ALL screen sizes */
@media screen and (min-width: 1px) {
  .category-icons,
  section.category-icons,
  .shopify-section .category-icons {
    padding-top: 30px !important;
    padding-bottom: 0px !important;
    padding-left: 0px !important;
    padding-right: 0px !important;
  }
}

.category-icons__container {
  max-width: 1200px !important;
  margin: 0 auto !important;
  padding: 0 15px !important;
}

.category-icons__grid {
  display: flex !important;
  justify-content: center !important;
  align-items: center !important;
  gap: 24px !important;
  flex-wrap: wrap !important;
}

.category-icons__item {
  display: flex !important;
  flex-direction: column !important;
  align-items: center !important;
  text-align: center !important;
}

.category-icons__label,
.category-icons__item p {
  display: block !important;
  text-align: center !important;
  margin: 8px auto 0 auto !important;
  width: 100% !important;
  font-size: 14px !important;
  line-height: 1.2 !important;
}

/* Responsive breakpoints with !important */
@media screen and (max-width: 1200px) and (min-width: 768px) {
  .category-icons__item:nth-child(n+6) { 
    display: none !important; 
  }
  
  /* Force logo to left on large screens where icons are hidden */
  .shopify-section-header .header {
    justify-content: flex-start !important;
  }
  
  .shopify-section-header .header__logo {
    margin-left: 0 !important;
    margin-right: auto !important;
    text-align: left !important;
  }
}

/* Large screens (1200px+) - ensure logo stays left */
@media screen and (min-width: 1200px) {
  .shopify-section-header .header {
    justify-content: flex-start !important;
  }
  
  .shopify-section-header .header__logo {
    margin-left: 0 !important;
    margin-right: auto !important;
    text-align: left !important;
  }
  
}

@media screen and (max-width: 767px) {
  .category-icons__grid {
    overflow: hidden !important;
    position: relative !important;
  }
  
  .category-icons__item {
    flex: 0 0 33.333% !important;
    transition: transform 0.5s ease-in-out !important;
  }
}

@media screen and (max-width: 600px) {
  .category-icons__label,
  .category-icons__item p {
    font-size: 12px !important;
  }
}

/* Specific fix for Collaborations label */
.collaborations-label,
.collaborations-item p {
  display: flex !important;
  justify-content: center !important;
  align-items: center !important;
  text-align: center !important;
  margin: 8px auto 0 auto !important;
  width: 100% !important;
}

.collaborations-item {
  display: flex !important;
  flex-direction: column !important;
  align-items: center !important;
  text-align: center !important;
}

/* Reduce navbar height to prevent overlap - keep logo positioning */
.shopify-section-header .header,
.shopify-section-header .header-trigger {
  height: 60px !important;
  min-height: 60px !important;
}

.shopify-section-header .header__logo {
  height: 60px !important;
  min-height: 60px !important;
  /* Keep original positioning - don't change alignment */
}

.shopify-section-header .header__logo-img {
  max-height: 40px !important;
  /* Keep logo at left position for @1440px */
}

.shopify-section-header .header__logo-ratio-box {
  height: 40px !important;
}

/* Force logo to left position on large screens */
.shopify-section-header .header {
  justify-content: flex-start !important;
}

.shopify-section-header .header__logo {
  padding-top: 10px !important;
  padding-bottom: 10px !important;
  margin-left: 0 !important;
  margin-right: auto !important;
  text-align: left !important;
}

/* Ensure header is not centered */
.shopify-section-header .header.header--center {
  justify-content: flex-start !important;
}

.shopify-section-header .header.header--center .header__logo {
  text-align: left !important;
  margin-left: 0 !important;
  margin-right: auto !important;
}

/* === Base wrapper (applies to ALL icons) === */
.category-icons__image-wrapper,
.category-icons__image-wrapper--multi {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: {{ section.settings.icon_border_radius }}%;
  background: {{ section.settings.icon_background }};
  width: {{ section.settings.icon_size }}px;
  height: {{ section.settings.icon_size }}px;
  margin-bottom: {{ section.settings.label_spacing }}px;
  border: {{ section.settings.icon_border_width }}px solid {{ section.settings.icon_border_color }};
  overflow: hidden;
  transition: all 0.3s ease;
}

/* === Image inside wrapper === */
.category-icons__image {
  width: 75%;          
  height: 75%;
  object-fit: contain; 
}

.category-icons__item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.category-icons__item p {
  display: block;
  text-align: center;
  margin: 8px auto 0 auto; 
  width: 100%;
  font-size: {{ section.settings.font_size }}px;
  font-weight: {{ section.settings.font_weight }};
  color: {{ section.settings.text_color }};
  line-height: 1.2;
}

.category-icons__label {
  text-align: center;
  display: block;
  width: 100%;
}

/* Multi-image tweaks */
.category-icons__image-wrapper--multi {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 2px; 
}

.category-icons__image-wrapper--multi .category-icons__image {
  flex: 1;            
  max-width: 35%;      
  height: auto;
  object-fit: contain;
}

/* === Per-icon desktop paddings === */
.category-icons__item:nth-child(1) .category-icons__image-wrapper { padding: {{ section.settings.icon1_padding_desktop }}; }
.category-icons__item:nth-child(2) .category-icons__image-wrapper { padding: {{ section.settings.icon2_padding_desktop }}; }
.category-icons__item:nth-child(3) .category-icons__image-wrapper { padding: {{ section.settings.icon3_padding_desktop }}; }
.category-icons__item:nth-child(4) .category-icons__image-wrapper { padding: {{ section.settings.icon4_padding_desktop }}; }
.category-icons__item:nth-child(5) .category-icons__image-wrapper { padding: {{ section.settings.icon5_padding_desktop }}; }
.category-icons__item:nth-child(6) .category-icons__image-wrapper { padding: {{ section.settings.icon6_padding_desktop }}; }
.category-icons__item:nth-child(7) .category-icons__image-wrapper { padding: {{ section.settings.icon7_padding_desktop }}; }

/* Hide some icons at mid breakpoints */
@media screen and (max-width: 1200px) and (min-width: 768px) {
  .category-icons__item:nth-child(n+6) { 
    display: none; 
  } /* show first 5 only */
}

/* Mobile carousel (<= 767px) */
@media screen and (max-width: 767px) {
  .category-icons__grid {
    display: flex;
    overflow: hidden;
    position: relative;
  }

  .category-icons__item {
    flex: 0 0 33.333%; /* 3 icons visible */
    transition: transform 0.5s ease-in-out;
    text-align: center;
  }

  .category-icons__label {
    text-align: center; /* ensures proper label alignment */
  }
}

/* Fix label alignment for "Collaborations" */
@media screen and (max-width: 600px) {
  .category-icons__item p.category-icons__label {
    display: block !important;
    text-align: center !important;
    margin: 0 auto !important;
    width: 100% !important;
  }
}
{%- endstyle -%}


