document.addEventListener('DOMContentLoaded', function() {
  console.log('üöÄ Category Icons - DOM Loaded');
  alert('üöÄ DOM Loaded - Looking for section...');
  
  // Force apply styles with JavaScript
  const section = document.querySelector('.category-icons');
  console.log('Section found:', section);
  
  if (!section) {
    alert('‚ùå SECTION NOT FOUND!');
    console.error('‚ùå SECTION NOT FOUND! Available sections:', document.querySelectorAll('section'));
    return;
  }
  
  alert('‚úÖ SECTION FOUND! Applying 30px padding...');
  
  const container = document.querySelector('.category-icons__container');
  const grid = document.querySelector('.category-icons__grid');
  const items = document.querySelectorAll('.category-icons__item');
  const labels = document.querySelectorAll('.category-icons__label');
  
  if (section) {
    // Function to force 30px padding
    function force30pxPadding() {
      // Remove all existing padding styles first
      section.style.removeProperty('padding');
      section.style.removeProperty('padding-top');
      section.style.removeProperty('padding-bottom');
      section.style.removeProperty('padding-left');
      section.style.removeProperty('padding-right');
      
      // Force set 30px padding
      section.style.setProperty('padding-top', '30px', 'important');
      section.style.setProperty('padding-bottom', '0px', 'important');
      section.style.setProperty('padding-left', '0px', 'important');
      section.style.setProperty('padding-right', '0px', 'important');
      section.style.setProperty('margin', '0px', 'important');
      
      const computedPadding = window.getComputedStyle(section).paddingTop;
      console.log('üî• NUCLEAR OPTION - Padding forced to 30px. Actual value:', computedPadding);
      
      // If it's still not 30px, log what's overriding it
      if (computedPadding !== '30px') {
        console.error('‚ùå PADDING STILL NOT 30PX! Current value:', computedPadding);
        console.log('Section classes:', section.className);
        console.log('Section ID:', section.id);
        console.log('Parent element:', section.parentElement);
      }
    }
    
    // Apply immediately
    force30pxPadding();
    
    // Apply repeatedly to override any late-loading styles
    setTimeout(force30pxPadding, 100);
    setTimeout(force30pxPadding, 500);
    setTimeout(force30pxPadding, 1000);
    setTimeout(force30pxPadding, 2000);
    
    // Keep checking every 2 seconds for the first 10 seconds
    let checkCount = 0;
    const intervalId = setInterval(() => {
      force30pxPadding();
      checkCount++;
      if (checkCount >= 5) {
        clearInterval(intervalId);
        console.log('üèÅ Stopped continuous padding enforcement after 10 seconds');
      }
    }, 2000);
  }
  
  // Reduce header height but keep logo positioning (left for @1440px)
  const header = document.querySelector('.shopify-section-header .header');
  const headerLogo = document.querySelector('.shopify-section-header .header__logo');
  const headerTrigger = document.querySelector('.shopify-section-header .header-trigger');
  const headerLogoImg = document.querySelector('.shopify-section-header .header__logo-img');
  const headerLogoRatio = document.querySelector('.shopify-section-header .header__logo-ratio-box');
  
  if (header) {
    header.style.cssText += 'height: 60px !important; min-height: 60px !important; justify-content: flex-start !important;';
    console.log('‚úÖ Header height reduced - logo forced to left');
  }
  
  if (headerLogo) {
    // Reduce height and force to left position
    headerLogo.style.height = '60px';
    headerLogo.style.minHeight = '60px';
    headerLogo.style.paddingTop = '10px';
    headerLogo.style.paddingBottom = '10px';
    headerLogo.style.marginLeft = '0';
    headerLogo.style.marginRight = 'auto';
    headerLogo.style.textAlign = 'left';
    console.log('‚úÖ Logo positioned to left');
  }
  
  if (headerTrigger) {
    headerTrigger.style.cssText += 'height: 60px !important; min-height: 60px !important;';
  }
  
  if (headerLogoImg) {
    headerLogoImg.style.maxHeight = '40px';
    // Keep original positioning
  }
  
  if (headerLogoRatio) {
    headerLogoRatio.style.height = '40px';
  }
  
  if (grid) {
    grid.style.cssText = 'display: flex !important; justify-content: center !important; align-items: center !important; gap: 24px !important; flex-wrap: wrap !important;';
  }
  
  items.forEach(item => {
    item.style.cssText = 'display: flex !important; flex-direction: column !important; align-items: center !important; text-align: center !important;';
  });
  
  labels.forEach(label => {
    label.style.cssText = 'display: block !important; text-align: center !important; margin: 8px auto 0 auto !important; width: 100% !important;';
  });
  
  // Special fix for Collaborations label
  const collaborationsLabel = document.querySelector('.collaborations-label');
  const collaborationsItem = document.querySelector('.collaborations-item');
  
  if (collaborationsLabel) {
    collaborationsLabel.style.cssText = 'display: flex !important; justify-content: center !important; align-items: center !important; text-align: center !important; margin: 8px auto 0 auto !important; width: 100% !important;';
    console.log('‚úÖ Collaborations label centered with flexbox');
  }
  
  if (collaborationsItem) {
    collaborationsItem.style.cssText = 'display: flex !important; flex-direction: column !important; align-items: center !important; text-align: center !important;';
    console.log('‚úÖ Collaborations item centered');
  }
  
  // Responsive behavior
  function handleResize() {
    const width = window.innerWidth;
    
    // Hide icons 6-7 on medium screens
    if (width <= 1200 && width >= 768) {
      items.forEach((item, index) => {
        if (index >= 5) {
          item.style.display = 'none !important';
        }
      });
    } else {
      items.forEach(item => {
        item.style.display = 'flex !important';
      });
    }
    
    // Mobile carousel
    if (width <= 767) {
      let currentIndex = 0;
      const totalSets = Math.ceil(items.length / 3);
      
      function showNextSet() {
        currentIndex = (currentIndex + 1) % totalSets;
        items.forEach((item, i) => {
          const setIndex = Math.floor(i / 3);
          const offset = (setIndex - currentIndex) * 100;
          item.style.transform = `translateX(${offset}%)`;
        });
      }
      
      setInterval(showNextSet, 5000);
    }
  }
  
  handleResize();
  window.addEventListener('resize', handleResize);
  
  console.log('‚úÖ Force fixes applied successfully');
});
